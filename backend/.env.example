# Backend environment variables (safe template)
# Copy to .env and fill in real values.

# Server
NODE_ENV=development
PORT=5001

# Database
MONGODB_URI=YOUR_MONGODB_URI

# Auth
JWT_SECRET=YOUR_JWT_SECRET
JWT_EXPIRY=7d
JWT_COOKIE_EXPIRE=7
ADMIN_JWT_EXPIRY=8h

# CORS
FRONTEND_URL=http://localhost:5174

# Optional: Redis leaderboard
REDIS_URL=

# Optional: Piston runtime (code execution)
PISTON_URL=https://emkc.org/api/v2/piston

# Optional: dev routes / seeding
ADMIN_MAIL=
ADMIN_PASS=
